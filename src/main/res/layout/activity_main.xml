<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DC14"
    android:orientation="vertical"
    tools:context="www.ctpositivo.edu.br.calculadora22.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtVisor"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="0"
            android:background="#B0C4DE"
            android:text="123456789"
            android:textAlignment="textEnd"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="@dimen/tamanho_texto_visor"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPow"
            style="@style/stiloBotoesOperacoes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickOperacoes"
            android:text="POW"
            android:textSize="@dimen/tamanho_texto_botoes"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnPi"
            style="@style/stiloBotoesOperacoes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickOperacoes"
            android:text="PI"
            android:textSize="@dimen/tamanho_texto_botoes"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnRaiz"
            style="@style/stiloBotoesOperacoes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickOperacoes"
            android:text="âˆš"
            android:textSize="@dimen/tamanho_texto_botoes"
            android:textStyle="bold" />

        <Button
            android:id="@+id/xElevadoAdois"
            style="@style/stiloBotoesOperacoes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickOperacoes"
            android:text="x2"
            android:textSize="@dimen/tamanho_texto_botoes"
            android:textStyle="bold" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnC"
            style="@style/stiloBotoesOutros"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickOperacoes"
            android:text="C"
            android:textSize="@dimen/tamanho_texto_botoes"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnMaisMenos"
            style="@style/stiloBotoesOutros"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickOperacoes"
            android:text="+/-"
            android:textSize="@dimen/tamanho_texto_botoes"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnPercent"
            style="@style/stiloBotoesOutros"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickOperacoes"
            android:text="%"
            android:textSize="@dimen/tamanho_texto_botoes"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnDivisao"
            style="@style/stiloBotoesOperacoes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickOperacoes"
            android:text="/"
            android:textSize="@dimen/tamanho_texto_botoes"
            android:textStyle="bold" />
    </LinearLayout>







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSeven"
            style="@style/stiloBotoesNumeros"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickNumeros"
            android:text="7"
            android:textSize="@dimen/tamanho_texto_botoes"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnEight"
            style="@style/stiloBotoesNumeros"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickNumeros"
            android:text="8"
            android:textSize="@dimen/tamanho_texto_botoes"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn9"
            style="@style/stiloBotoesNumeros"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickNumeros"
            android:text="9"
            android:textSize="@dimen/tamanho_texto_botoes"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn6"
            style="@style/stiloBotoesOperacoes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickOperacoes"
            android:text="*"
            android:textSize="@dimen/tamanho_texto_botoes"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn11"
            style="@style/stiloBotoesNumeros"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickNumeros"
            android:text="4"
            android:textSize="@dimen/tamanho_texto_botoes"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn12"
            style="@style/stiloBotoesNumeros"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickNumeros"
            android:text="5"
            android:textSize="@dimen/tamanho_texto_botoes"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn13"
            style="@style/stiloBotoesNumeros"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickNumeros"
            android:text="6"
            android:textSize="@dimen/tamanho_texto_botoes"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn14"
            style="@style/stiloBotoesOperacoes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickOperacoes"
            android:text="-"
            android:textSize="@dimen/tamanho_texto_botoes"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn15"
            style="@style/stiloBotoesNumeros"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickNumeros"
            android:text="3"
            android:textSize="@dimen/tamanho_texto_botoes"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn16"
            style="@style/stiloBotoesNumeros"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickNumeros"
            android:text="2"
            android:textSize="@dimen/tamanho_texto_botoes"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn17"
            style="@style/stiloBotoesNumeros"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickNumeros"
            android:text="1"
            android:textSize="@dimen/tamanho_texto_botoes"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button18"
            style="@style/stiloBotoesOperacoes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickOperacoes"
            android:text="+"
            android:textSize="@dimen/tamanho_texto_botoes"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnInfo"
            style="@style/stiloBotoesOutros"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickOperacoes"
            android:text="INFO"
            android:textSize="@dimen/tamanho_texto_botoes"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button20"
            style="@style/stiloBotoesNumeros"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickNumeros"
            android:text="0"
            android:textSize="@dimen/tamanho_texto_botoes"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button21"
            style="@style/stiloBotoesOutros"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickOperacoes"
            android:text=","
            android:textSize="@dimen/tamanho_texto_botoes"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button22"
            style="@style/stiloBotoesOperacoes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickOperacoes"
            android:text="="
            android:textSize="@dimen/tamanho_texto_botoes"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>
