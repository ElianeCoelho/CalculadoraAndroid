<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><!--estado botão pressionado-->
        <shape android:shape="rectangle">
            <corners android:radius="15dip"></corners><!--CANTOS ARREDONDADOS-->
            <stroke android:width="1dip"></stroke><!--CONTORNO DO ITEM-->
            <solid android:color="#008B8B"></solid>
        </shape>
    </item>

    <item android:state_focused="true">><!--estado botão mantendo pressionado pressionado-->
        <shape android:shape="rectangle">
            <corners android:radius="15dip"></corners><!--CANTOS ARREDONDADOS-->
            <stroke android:width="1dip"></stroke><!--CONTORNO DO ITEM-->
            <solid android:color="#008B8B"></solid>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="15dip"></corners><!--CANTOS ARREDONDADOS-->
            <stroke android:width="1dip"></stroke><!--CONTORNO DO ITEM-->
            <solid android:color="#B0C4DE"></solid>
        </shape>
    </item>



</selector>